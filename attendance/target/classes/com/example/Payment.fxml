<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.employeeattendance.controller.PaymentController" spacing="10" alignment="CENTER">
    <Label text="Salary Payment" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="paymentTable" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="100" />
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" />
            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100" />
        </columns>
    </TableView>
    <Button text="Pay Salary" onAction="#paySalary"/>
</VBox>
